terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "= ${args.provider_version.aws}"
    }
    null = {
      source  = "hashicorp/null"
      version = "= ${args.provider_version.null}"
    }
    random = {
      source  = "hashicorp/random"
      version = "= ${args.provider_version.random}"
    }
  }

  required_version = "= ${args.terraform_version}"
}
